# Database - Use Docker service name
DATABASE_URL="postgresql://postgres:postgres@auth-db-dev:5432/gitcode_auth"

# Redis - Use Docker service name
REDIS_URL="redis://auth-redis-dev:6379"

# Keycloak - External URL (for browser - uses host port 8090)
KEYCLOAK_URL="http://localhost:8090"
# Keycloak - Internal URL (for backend - uses container port 8080)
KEYCLOAK_INTERNAL_URL="http://keycloak-dev:8080"
KEYCLOAK_REALM="gitcode-dev"
KEYCLOAK_CLIENT_ID="gitcode-auth-service"
KEYCLOAK_CLIENT_SECRET="paste_me_from_keycloak_admindash"

# JWT
JWT_SECRET="generate_your_own_jwt_secret"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# URLs
FRONTEND_URL="http://localhost:3000"
API_CALLBACK_URL="http://localhost:4001/auth/callback"

# Environment
NODE_ENV="development"
PORT=4001